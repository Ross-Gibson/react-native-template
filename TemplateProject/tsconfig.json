{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "importHelpers": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "components": ["app/components"],
      "screens": ["app/screens"],
      "*": [
        "*",
        "*.android",
        "*.ios"
      ]
    },
    "strict": true,
    "target": "es2015"
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "index.*",
    "app/**/*"
  ]
}
